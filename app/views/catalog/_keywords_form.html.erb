<%= form_tag search_action_url, :method => :get, :class => 'search-query-form clearfix navbar-form' do %>
  <%= render_hash_as_hidden_fields(params_for_search.except(:qt, :page, :utf8)) %>

  <div class="input-group">
    <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
    <%= text_field_tag 'qf[]', '', :placeholder => 'Add more keywords', :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>

    <span class="input-group-btn">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <span class="submit-search-text">Add</span>
        <span class="glyphicon glyphicon-plus"></span>
      </button>
      </span>
    </div>
<% end %>
