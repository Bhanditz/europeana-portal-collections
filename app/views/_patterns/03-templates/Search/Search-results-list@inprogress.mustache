{{> 00-atoms/03a-iconography/03-svgicons-search }}

{{> 02-organisms/00-global/00-header}}

<div role="main" class="page l-page">

<section class="search-hero">
		<div class="searchbar">
		<form action="#" class="search-multiterm">
			<div class="inputarea">
				<input type="text" value="Rembrandt, Art History" data-role="tagsinput" placeholder="Add a search term"/>
			</div>
			<div class="submitarea">
				<button type="submit" class="search-submit">
				<svg class="icon icon-search">
					<use xlink:href="#icon-search"></use>
				</svg>
				<span class="is-vishidden">Search</span>
			</button>
			</div>
		</form>
		</div>

</section>

<section class="search-results">
<div class="container">


	<div class="results-list">

		<div class="results-header">

			<div class="action-select">
				<input type="checkbox" name="allselected" id="action_select_all">
			</div>

			<div class="result-actions">
			{{> 01-molecules/07-controls/01-dropdown-menu }}
			</div>

			<div class="result-info">
				1640 results for <strong>Rembrandt</strong> and <strong>Art History</strong>
			</div>



			<div class="result-controls">

				{{! List and grid view buttons }}
				{{> 01-molecules/07-controls/02-buttonbar-viewtype }}

				<div class="result-sort">
					<a class="dropdown-trigger" href="#" data-dropdown="#dropdown-result-sort">Relevance</a>

					<div id="dropdown-result-sort" class="dropdown">
						<div class="menu-title">Sort by…</div>

					    <ul class="dropdown-menu">
					        <li><a href="#1">Date</a></li>
					        <li><a href="#2">Alphabetical</a></li>
					        <li><a href="#3">Relevance</a></li>
					        <li><a href="#3">Relevance</a></li>
					        <li class="dropdown-divider"></li>
					        <li><a href="#5" class="menu-more">Advanced search</a></li>
					    </ul>
					</div>
				</div>
			</div>


		</div>


		<ol>
		{{# listItems.ten }}
		{{#document_list}}
		<h1>here</h1>
			<li>
(type-image:true)
		    {{> 01-molecules/06-components/search/search-listitem }}
		    </li>
		{{/document_list}}
		{{/ listItems.ten }}


		</ol>
	</div>


	<div class="refine">

		<h2>Refine your search</h2>

(title: "Channel")
		{{> 01-molecules/07-controls/filter-simple }}

(title: "Type")
		{{> 01-molecules/07-controls/filter-simple }}

(title: "Date")
		{{> 01-molecules/07-controls/filter-date }}

(title: "Country")
		{{> 01-molecules/07-controls/filter-simple }}

(title: "Can I use it?")
		{{> 01-molecules/07-controls/filter-license }}

(title: "Language")
		{{> 01-molecules/07-controls/filter-language }}

		<a href="#refine-advanced">More refinements…</a>

		<div class="refine-advanced">
			@TODO add advanced search
		</div>

	</div>

</div>
</section>

</div>


{{> 02-organisms/00-global/01-footer}}
